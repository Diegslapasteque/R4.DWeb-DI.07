{% extends 'base.html.twig' %}

{% block title %}Lego Details{% endblock %}

{% block body %}

{% block navigation %}
  <a href="/">All</a> | 
  {% for collection in collections %}
    <a href="/collection/{{ collection.id }}">{{ collection.name }}</a> | 
  {% endfor %}
{% endblock %}

{% block button %}
  {% if app.user %}
    <p>Bonjour {{ app.user.username }} !</p>
    <button class="logout_button"><a href="{{ path('app_logout') }}">Déconnexion</a></button>
  {% else %}
    <button class="login_button"><a href="{{ path('lego_store_login') }}">Connexion</a></button>
  {% endif %}
{% endblock %}

{% for lego in legos %}
<div class="lego_card">

    <div class="info_section">
        <div class="lego_header">
            <img class="locandina" src="/images/{{lego.boxImage}}"/>
            <h1>{{ lego.name }}</h1>
            <span class="pieces">Pièces : {{ lego.pieces }}</span>
            <p class="price">{{ lego.price }}€</p><br>
            <a href="index.php?buy={{ lego.id }}"><button>Buy</button></a>
        </div>
        <div class="lego_desc">
            <p class="text">
                {{ lego.description }}
            </p>
        </div>
        <div class="lego_social">
            <ul>
                <li><i class="material-icons">share</i></li>
                <li><i class="material-icons"></i></li>
                <li><i class="material-icons">chat_bubble</i></li>
            </ul>
        </div>
    </div>
    
    <div class="blur_back">
      <img src="/images/{{ lego.legoImage }}" alt="background lego card">
    </div>
</div>
{% endfor %}
{% endblock %}


